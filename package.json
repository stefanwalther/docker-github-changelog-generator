{
  "name": "docker-github-changelog-generator",
  "version": "0.1.0",
  "description": "Docker image to use the GitHub Changelog Generator.",
  "scripts": {
    "docs": "docker run --rm -v ${PWD}:/opt/verb stefanwalther/verb",
    "d-build": "docker build -t stefanwalther/github-changelog-generator .",
    "d-run": "docker run --rm -v ${PWD}:/app stefanwalther/github-changelog-generator",
    "changelog": "docker run --rm -v ${PWD}:/app stefanwalther/github-changelog-generator -t ${GITHUB_CHANGELOG_GENERATOR_TOKEN} -u stefanwalther -p docker-github-changelog-generator"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefanwalther/docker-github-changelog-generator.git"
  },
  "keywords": [
    "github",
    "changelog",
    "generator",
    "changelog-generator",
    "readme"
  ],
  "author": "Stefan Walther <swr.nixda@gmail.com> (http://qliksite.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stefanwalther/docker-github-changelog-generator/issues"
  },
  "homepage": "https://github.com/stefanwalther/docker-github-changelog-generator#readme",
  "private": true
}
